<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="digiteam_title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>
    
    <style name="digiteam_lato_subtitle">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_light_gray</item>
    </style>

    <style name="digiteam_subtitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_light_gray</item>
    </style>

    <style name="card_title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="blue_text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>
    
    <style name="progress_bar_text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="small_lato_text">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_light_gray</item>
    </style>

    <style name="month_text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_green</item>
    </style>

    <style name="icon_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="circular_img">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="button">
        <item name="backgroundTint">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="calendar">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_marginEnd">@dimen/x0.25</item>
        <item name="android:layout_marginBottom">@dimen/x0.25</item>
    </style>
    
</resources>